<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Todo Index</title>
    <style media="screen">
        @import url('https://fonts.googleapis.com/css?family=Just+Another+Hand|Open+Sans+Condensed:300|Oswald');
        body {
            font-family: 'Oswald';
            display: flex;
            justify-content: flex-start;
        }
        h1 {
          margin: 0;
          padding: 0;
        }
        form {
          text-align: left;
          padding: 0 10%;
        }
        .container {
          background-color: rgb(241, 236, 166);
          background: url('http://www.artwallpaperhi.com/thumbnails/detail/20121017/paper%20minimalistic%20backgrounds%20notebook%202560x1600%20wallpaper_www.artwallpaperhi.com_79.jpg');
          width: 25%;
          text-align: center;
          padding: 5% 0;
        }
        .description {
            font-family: 'Just Another Hand';
            font-size: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>YOUR TODO LIST FOR TODAY:</h1>
        <form action="">
            <% allTodos.forEach(function(todo) { %>
                <input type="checkbox"><b><%= todo.name%></b> <span class="description">( <%= todo.description%> )</span><br>
                <% }) %>
        </form>
    </div>
</body>

</html>
